# .env.example
# ============================================================
# Healthcare No-Show Prediction System - Environment Variables
# ============================================================
# Copy to .env and customize:  cp .env.example .env
# ============================================================

# ==================== API Configuration ====================
API_PORT=8000
DEBUG=false
LOG_LEVEL=INFO
WORKERS=2

# ==================== Model Paths ====================
# These are mounted as volumes in Docker
NOSHOW_MODEL_PATH=/app/models/production/model.joblib
NOSHOW_PREPROCESSOR_PATH=/app/models/production/preprocessor.joblib

# ==================== LLM Configuration ====================
# Required for LLM features (explanation, RAG, chat)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: Anthropic for alternative LLM
# ANTHROPIC_API_KEY=sk-ant-your-key-here

# LLM Settings
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_CACHE=true

# ==================== LangChain/LangSmith (Optional) ====================
LANGCHAIN_TRACING=false
# LANGCHAIN_API_KEY=your-langsmith-key
LANGCHAIN_PROJECT=healthcare-assistant

# ==================== Optional Services ====================
# Uncomment to enable

# Redis Cache
# REDIS_PORT=6379

# Nginx Reverse Proxy
# NGINX_PORT=80
# NGINX_SSL_PORT=443

# ==================== Development ====================
# Set DEBUG=true for development
# DEBUG=true
# LOG_LEVEL=DEBUG